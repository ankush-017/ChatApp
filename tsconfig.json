{
  "compilerOptions": {
    "target": "ES2020",                  // JavaScript version output
    "module": "esnext",                  // Use native ES Modules
    "moduleResolution": "NodeNext",      // Resolves imports like Node ESM
    "rootDir": "./",                     // Root folder of TS source files
    "outDir": "dist",                    // Output JS files
    "esModuleInterop": true,             // Allows 'import express from "express"'
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true
  },

  "include": ["**/*.ts"]
}